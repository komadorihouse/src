<%= link_to "商品の選択", orders_path %> > <%= link_to @merchandise.user.facility_name, user_order_path(@merchandise.user.id) %> > <%= @merchandise.merchandise_name %>
<div>
    <h2><%= @merchandise.merchandise_name %></h2>
    <div>
        <% if @merchandise.limit == true %>
            数量限定商品 
            <%= @merchandise.quantity %> 個
        <% else %>
            注文上限なし
        <% end %>
    </div>
    <div>
        単価<%= @merchandise.price %>円
    </div>
    <div>
        <%= @merchandise.explanation %>
    </div>
    <div>
        注文期限
    </div>
    <div>
        <%= @merchandise.deadline.year %>年
        <%= @merchandise.deadline.month %>月
        <%= @merchandise.deadline.day %>日
    </div>
</div>

<div>
    <% if @merchandise.deadline < Time.now %>
        <div id="limit-info">
            注文期限を過ぎています
        </div>
    <% else %>
        <%= link_to "注文する", new_order_path(@merchandise.id) %>
    <% end %>
</div>